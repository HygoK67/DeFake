<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.group6.defakelogibackend.mapper.AuthorMapper">
    <insert id="addAuthor">
        insert into authors
            (name)
        values
            (#{name})
    </insert>

    <select id="findAuthor" resultType="com.group6.defakelogibackend.model.Author">
        select * from authors
        <where>
            <if test="nameSubString != null">
                name like CONCAT('%',#{nameSubString},'%')
            </if>
            <if test="id != null">
                id = #{id}
            </if>
        </where>
    </select>


</mapper>