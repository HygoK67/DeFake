<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.group6.defakelogibackend.mapper.UserMapper">
    <select id="findUserByEmail" resultType="com.group6.defakelogibackend.model.User">
        select * from users
        where
            email = #{email}
    </select>

    <select id="findUserByUsername" resultType="com.group6.defakelogibackend.model.User">
        select * from users
        where
        user_name = #{username}
    </select>

    <select id="findUserById" resultType="com.group6.defakelogibackend.model.User">
        select * from users
        where
        id = #{id}
    </select>

    <select id="findUserByPhone" resultType="com.group6.defakelogibackend.model.User">
        select * from users
        where
        phone = #{phone}
    </select>

    <insert id="addUser">
        insert into users
        (
            user_name,
            email,
            <if test="phone != null">
            phone,
            </if>
            password_hash
        )
        values
        (
            #{username},
            #{email},
            <if test="phone != null">
            #{phone},
            </if>
            #{passwordHash}
        )
    </insert>

    <insert id="updateUser">
        update users
        <set>
            <if test="username != null">
                user_name = #{email},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="passwordHash != null">
                password_hash = #{passwordHash},
            </if>,
            <if test="avatarPath != null">
                avatar_path = #{avatarPath},
            </if>
            <if test="lastLoginAt != null">
                updated_at = updated_at,
            </if>
            <if test="lastLoginAt != null">
                last_login_at = #{lastLoginAt},
            </if>
        </set>
        where
            id = #{id}
    </insert>

</mapper>